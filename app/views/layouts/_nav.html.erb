<a class="btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
Menu
</a>

<nav id="main">
  <%= content_tag :ul do %>
    <%= content_tag :li, link_to("Shows", shows_path, :class => "#{"active" if params[:action] == 'shows'}"), :class => "first" %>
    <%= content_tag :li, link_to("Music", music_path, :class => "#{"active" if params[:action] == 'music'}") %>
    <%= content_tag :li, link_to("Photos", photos_path, :class => "#{"active" if params[:action] == 'photos'}") %>
    <%= content_tag :li, link_to("Band", band_path, :class => "#{"active" if params[:action] == 'band'}") %>
    <%= content_tag :li, link_to("Contact", contact_path, :class => "#{"active" if params[:action] == 'contact'}") %>
    <% if current_user %>
      <%= content_tag :li, :class => "dropdown" do %>
        <%= link_to "Admin", "#", :class => "dropdown-toggle", :data => { :toggle => "dropdown" } %>
        <%= content_tag :ul, :class => "dropdown-menu" do %>
          <%= content_tag :li, link_to("New Show", new_show_path) %>
          <%= content_tag :li, link_to("New Song", new_song_path) %>
        <% end %>
      <% end %>
      <%= content_tag :li, link_to("Logout", destroy_user_session_path, :data => { :method => :delete }) %>
    <% end %>
  <% end %>
</nav>
