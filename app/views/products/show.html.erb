<div>
  <h2><%= @product.title %></h2>
  <div id="description">
    <%= simple_format @product.description %>
  </div>
  <div id="images">
    <% @product.product_images.each do |image| %>
      <%= image_tag image.image_url(:med) %>
    <% end %>
  </div>
  <% if admin %>
    <%= link_to 'edit', edit_product_path(@product), class: 'button' %>
  <% end %>
</div>
