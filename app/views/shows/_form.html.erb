<%= simple_form_for @show, :html => { :class => "show-form" } do |f| %>

  <%= f.input :date, :as => :string %>
  <%= f.input :venue %>
  <%= f.input :city %>
  <%= f.input :tickets_link, :label => "Tickets link" %>
  <%= f.input :venue_link %>
  <%= f.input :info, :input_html => { :rows => 5 } %>

  <%= f.button :submit %>
  
<% end %>
