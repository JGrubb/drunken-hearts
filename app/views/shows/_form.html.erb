<%= simple_form_for @show, :html => { :class => "show-form" } do |f| %>

<div class="half-grid">
  <%= f.input :date, :as => :string %>
  <%= f.input :venue %>
  <%= f.input :city %>
</div>
<div class="half-grid">
  <%= f.input :info, :input_html => { :class => "input-xlarge", :rows => 3 } %>
  <%= f.input :link %>
</div>

  <%= f.button :submit %>
  
<% end %>
