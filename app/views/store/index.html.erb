<div id="store">
  <h1>Merch</h1>
  <% @products.each do |product| %>
    <div class="product">
      <h2><%= product.title %></h2>
      <div class="description"><%= product.description %></div>
      <div class="image">
        <%= image_tag product.product_images.first.image_url(:med) %>
      </div>

      <%= link_to 'Add to Cart', "",
          :data => { 
            'ng-click' => "addToCart(#{product.id})"
          },
          :class => "button add-to-cart" %> |
      <%= link_to "Details", product_path(product), :class => "button" %>
    </div>
  <% end %>
</div>
